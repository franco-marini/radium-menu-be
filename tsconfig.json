{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "src/**/*",
    "src/index.ts",
    "./typings/*"
  ],
  "exclude": ["node_modules/**"]
}